@page "{id:int?}"
@model Turcas_Roxana_lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Book Title / Author Name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
 {
 string selectedRow = "";
 if (item.ID == Model.CategoryID)
 {
 selectedRow = "table-success";
 }
 <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.SelectedCategory != null && Model.SelectedCategory.BookCategories != null && Model.SelectedCategory.BookCategories.Any())
{
    <h2>Books in @Model.SelectedCategory.CategoryName</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Publishing Date</th>
                <th>Publisher</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bc in Model.SelectedCategory.BookCategories)
            {
                <tr>
                    <td>@bc.Book.Title</td>
                    <td>@bc.Book.Author.FirstName @bc.Book.Author.LastName</td>
                    <td>@bc.Book.Price</td>
                    <td>@bc.Book.PublishingDate.ToShortDateString()</td>
                    <td>@bc.Book.Publisher.PublisherName</td>
                </tr>
            }
        </tbody>
    </table>
}



